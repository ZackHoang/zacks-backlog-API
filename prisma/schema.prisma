generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  isAdmin Boolean
  username String @unique
  password String
  createdAt DateTime @default(now())
  @@map("users")
}

model Tag {
  id Int @id @default(autoincrement())
  name String @unique
  @@map("tags")
}

model Post {
  id String @id @default(uuid())
  isPublished Boolean
  title String @unique
  content String
  likes Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("posts")
}

model TagsOnPosts {
  tagID Int
  postID String
  @@id([tagID, postID])
}

model Comment {
  id String @id @default(uuid())
  postID String
  replyID String?
  message String
  createdAt DateTime @default(now())
  @@map("comments")
}